<div class='d-inline'>
<h1 class='float-left'>Liste des <%= pluralize(@bodies.count, 'entité', plural: 'entités') %></h1>
</div>
<div class='d-inline '>
  <%= link_to 'Ajouter une entité', new_body_path, class: 'float-right btn btn-flat btn-sm' %>
</div>

<table class='table table-striped table-sm'>
  <thead>
    <tr>
      <th scope="col">Acronyme</th>
      <th scope="col">Nom</th>
      <th scope="col">Ancestry</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bodies.order(:short_name).each do |body| %>
      <tr>
        <th scope="row"><%= body.short_name %></th>
        <td><%= body.long_name %></td>
        <td><%= body.ancestry %></td>
        <td>
          <ul class="list-inline mb-0">
            <li class="list-inline-item">
              <%= link_to body_path(body) do %><i class="fas fa-eye m-0"></i><% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to edit_body_path(body) do %>
                <i class="fas fa-edit list-inline-item"></i>
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to body_path(body), method: :delete, data: {confirm: "Êtes vous sûr ?"} do %>
                <i class="fas fa-trash-alt list-inline-item"></i>
              <% end %>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= simple_form_for [@expert, @membership] do |f| %>
  <%= f.association :body, label_method: :full_short_name,
    collection: Body.order(:short_name), include_blank: false %>
  <%= f.association :membership_type, label_method: :long_name,
    collection: MembershipType.order(:long_name), include_blank: true %>
  <%= f.submit class: 'btn btn-flat'%>
<% end %>

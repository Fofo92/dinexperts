<%= simple_form_for [@expert, @membership] do |f| %>
  <%= f.association :body, label_method: :full_name,
    collection: Body.order(:short_name), input_html:{ class: 'select2' }, include_blank: true %>
  <%= f.association :membership_type, label_method: :long_name,
    collection: MembershipType.order(:long_name), include_blank: true %>
  <%= f.input :starting_at, as: :string, required: true, input_html: {class: "datepicker"} %>
  <%= f.input :ending_at, as: :string, required: true, input_html: {class: "datepicker"} %>

  <%= f.submit class: 'btn btn-flat'%>
<% end %>

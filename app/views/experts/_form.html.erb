<%= simple_form_for(@expert) do |f| %>
  <%= f.association :title, label_method: :long_title, collection: Title.all, include_blank: false %>
  <%= f.input :last_name %>
  <%= f.input :first_name %>
  <%= f.association :body, label_method: :long_name, collection: Body.order(:long_name), include_blank: false %>
  <%= f.input :active %>
  <%= f.submit class: 'btn btn-flat'%>
<% end %>
